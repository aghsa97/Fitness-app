<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
<body>
    <div class="wrapper">
        <%- include('../partials/nav.ejs') %>
        <section class="trainer-home-container">
            <div class="client-info">
                <div>
                    <ul>
                    <li><%=info[0].firstname%></li> 
                    <li><%=info[0].lastname%></li>
                    <li><%=info[0].email%></li>
                    <li><%=info[0].weight%>kg</li>
                    <li><%=info[0].height%>cm</li>
                    <li><%=info[0].gender%></li>
                    </ul>
            </div>
        
            <h3>Assign workout</h3>
            <div>
                <form class="client-info" id ="assign-workout-form" `action = client/: + <%=info[0].firstname%>` action method="POST">
                    <label>My workouts</label><br>
                        <select name="workout">
                            <% if (locals.trainer_workouts) { %>
                                <% trainer_workouts.forEach(function(str){ %>
                                    <option value = <%=JSON.parse(JSON.stringify(str)).id%>><%=JSON.parse(JSON.stringify(str)).name%></option> 
                                <% }) %>
                            <% } %>
                        </select>
        
                    <input name="user_id" type = "hidden" value = <%=info[0].id%>>
                    <input type = "submit" value="submit" onclick="return confirm('Are you sure you want to assign the workout?')">
        
                </form>
            </div>
        
            <h3>Assigned workouts</h3>
            <div>
                <% if (locals.client_workouts) { %>
                    <% client_workouts.forEach(function(str){ %>
                        <option value = <%=JSON.parse(JSON.stringify(str)).id%>><%=JSON.parse(JSON.stringify(str)).name%></option> 
                    <% }) %>
                <% } %>
            </div>
            <a href="/home"><button>Back</button></a>
            </div>
            <div class="separator"></div>
            <div class="info-list">
                <div class="list-header">
                    <p><strong>Second list</strong></p>
                </div>
                <ul>
                    <% if (locals.clients) { %>
                        <% clients.forEach(function(str){ %>
                        <li onclick="location.href = '/client/<%=JSON.parse(JSON.stringify(str)).id%>'">
                            <%=JSON.parse(JSON.stringify(str)).firstname%> <%=JSON.parse(JSON.stringify(str)).lastname %> <%= JSON.parse(JSON.stringify(str)).email%></li>
                        <% }) %>
                    <% } %>
                </ul>
            </div>
        </section>
        <%- include('../partials/footer.ejs') %>
    </div>
</body>
</html>