<!DOCTYPE html>
<html>
<body>

<h1> <%=firstName%> you are a trainer, rejoice</h1>

<div>
    <p>Client list</p>
    <ul>
        <% if (locals.clients) { %>
            <% clients.forEach(function(str){ %>
               <li onclick="location.href = '/client/<%=JSON.parse(JSON.stringify(str)).id%>'">
                   <%=JSON.parse(JSON.stringify(str)).firstname%> <%=JSON.parse(JSON.stringify(str)).lastname %> <%= JSON.parse(JSON.stringify(str)).email%></li>
            <% }) %>
        <% } %>
    </ul>
</div>

<div>
    <p>My workouts </p>
    <ul>
        <% if (locals.workouts) { %>
            <% workouts.forEach(function(str){ %>
               <li><%=JSON.parse(JSON.stringify(str)).name%></li>
            <% }) %>
        <% } %>
    </ul>
    <a href="/createworkout" class="btn btn-primary">Create workout</a>
</div>


<a href="/logout" class="btn btn-primary">Logout</a>

</body>
</html>