<html>
    <head>
        <meta charset="utf-8" />
        <base href="/">
        <link rel="stylesheet" href="base-styles.css">
        <link rel="stylesheet" href="workoutPage.css">
        <link rel="stylesheet" href="nav-styles.css">
        <link rel="stylesheet" href="footer-style.css">
    </head>
    <body>
        <div class="wrapper">
            <%- include('../partials/nav.ejs'); %>
            <div class="content">
                <div class="info-list">
                    <div class="list-header">
                        <p><strong>
                            <%= JSON.parse(JSON.stringify(locals.workout_info[0])).wname %>
                        </strong></p>
                    </div>
                    <ul>
                        <% if (locals.workout_info) { %>
                            <% workout_info.forEach(function(str){ %>
                                <li>
                                    Name: <%=JSON.parse(JSON.stringify(str)).name%><br>
                                    Description: <%=JSON.parse(JSON.stringify(str)).description%><br>
                                    Load: <%=JSON.parse(JSON.stringify(str)).e_load%><br>
                                    Reps: <%=JSON.parse(JSON.stringify(str)).e_reps%><br>
                                    Order: <%=JSON.parse(JSON.stringify(str)).e_order%>
                                </li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>
            <%- include('../partials/footer.ejs') %>
        </div>
    </body>

</html>